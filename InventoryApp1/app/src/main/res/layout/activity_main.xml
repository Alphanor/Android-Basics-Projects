<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/text_view_number_of_rows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:fontFamily="sans-serif-condensed"
            tools:text="NUMBER OF ROWS IN DATABASE : 8"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/text_view_inventory"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_number_of_rows"
            tools:text="LOREM IPSUM DOLOR SIT AMET CONSECUECTUER"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/baseline_shopping_cart_white_36dp"
            android:layout_margin="@dimen/fab_margin" />


    </RelativeLayout>